<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_stepId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:padding="10dp"
            android:textColor="@color/colorPrimaryLight"/>

        <TextView
            android:id="@+id/tv_stepShortDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_stepId"
            android:padding="10dp"
            android:textColor="@color/colorBlack"/>

        <ImageView
            android:id="@+id/iv_stepOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_keyboard_arrow_right"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/step_open_icon" />

    </RelativeLayout>


</LinearLayout>